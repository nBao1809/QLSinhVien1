<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.UtilityFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bottomnav"
        app:popupTheme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        app:title="@string/Utility"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="7dp"
        android:text="@string/manage"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/hopthoaisetting"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <Button
            android:id="@+id/btnQuanLiUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/settingshape"
            android:drawableEnd="@drawable/usermanageicon"
            android:text="@string/UserManagement"
            android:textAlignment="textStart"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnQuanLyGiangVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/settingshape"
            android:drawableEnd="@drawable/whiteschoolicon"
            android:text="@string/StudentTeacherManagement"
            android:textAlignment="textStart"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnQuanLyDanhSachSinhVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/settingshape"
            android:drawableEnd="@drawable/listicon"
            android:text="@string/StudentListManagement"
            android:textAlignment="textStart"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnQuanLyLopHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/settingshape"
            android:drawableEnd="@drawable/bookicon"
            android:text="@string/ClassManagement"
            android:textAlignment="textStart"
            app:backgroundTint="@null" />
    </LinearLayout>

</LinearLayout>